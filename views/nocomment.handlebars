<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{body}}}</p>
  <p>{{user.name}}: {{format_date createdAt}}</p>

  {{!-- Wrap the buttons in a single <div> element --}}
  <div>
    <a href="/" class="btn btn-primary">More Posts</a>
  </div>
{{!-- Edit Note Form --}}
<div class="card mb-4 edit-note-form d-none">
  <div class="card-body">
    <h4>Edit Note</h4>
    <form class="edit-form">
      <div class="form-group">
        <label for="edit-post-title">Title</label>
        <input type="text" class="form-control" id="edit-post-title" value="{{title}}">
      </div>
      <div class="form-group">
        <label for="edit-post-body">Body</label>
        <textarea class="form-control" id="edit-post-body" rows="3">{{body}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update Note</button>
      <button type="button" class="btn btn-secondary cancel-btn">Cancel</button>
    </form>
  </div>
</div>

<script src="./../js/profile.js"></script>